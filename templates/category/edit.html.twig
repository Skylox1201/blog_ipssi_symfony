{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - {{'EditCategory'|trans}}{% endblock %}

{% block content %}
<div class="container my-3">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center">{{'EditCategory'|trans}}</h1>
        </div>
        <div class="col-12 m-auto" style="max-width:340px;">
            {{ form_start(form) }}
                <div class="m-3">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title, { 'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="input-group m-3">
                    <input type="submit" class="btn btn-primary" value="{{'Update'|trans}}" />
                    <a href="{{ path('app_category') }}" class="btn btn-secondary">{{'BackToList'|trans}}</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}