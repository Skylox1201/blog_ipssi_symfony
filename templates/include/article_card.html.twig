<div class="loaded-card col h-100">
    <div class="card h-100">
        <div class="card-body">
            <h5 class="card-title">{{ article.title }}</h5>
            <p class="card-text">{{ article.content | striptags | slice(0, 100) }}...</p>
            <a href="{{ path('app_article_show', {id: article.id}) }}" class="btn btn-primary">{{ 'ReadMore'|trans }}</a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_article_edit', {id: article.id}) }}" class="btn btn-warning">{{ 'Edit'|trans }}</a>
                <a href="{{ path('app_article_delete', {id: article.id}) }}" class="btn btn-danger">{{ 'Delete'|trans }}</a>
            {% endif %}
        </div>
        <div class="card-footer text-body-secondary">
            <p class="card-text"><small class="text-muted">{{ 'PublishedOn'|trans }} {{ article.publicationDate | date('d/m/Y') }} {{ 'by'|trans }} {{ article.author.username }}</small></p>
        </p>
        </div>
    </div>
</div>
<div class="loading-card col" style="display:none;">
    <div class="card" aria-hidden="true">
        <div class="card-body">
            <h5 class="card-title placeholder-wave">
                <span class="placeholder col-6"></span>
            </h5>
            <p class="card-text placeholder-wave">
                <span class="placeholder col-7"></span>
                <span class="placeholder col-4"></span>
                <span class="placeholder col-4"></span>
                <span class="placeholder col-6"></span>
                <span class="placeholder col-8"></span>
            </p>
        </div>
        <div class="card-footer text-body-secondary">
            <p class="card-text"><small class="text-muted placeholder col-6"></small></p>
        </div>
    </div>
</div>
