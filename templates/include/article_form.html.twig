<div class="row">
    <div class="col-8">
        <div class="mb-3">
            {{ form_label(form.title) }}
            {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div>
            {{ form_label(form.content) }}
            {{ form_widget(form.content, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div id="editor"></div>
    </div>
    <div class="col-4">
        <div class=" row">
            <div class="col-1 d-flex">
                <div class="vr"></div>
            </div>
            <div class="col-11">
            <div class="mb-3">
                {{ form_label(form.category) }}
                {{ form_widget(form.category, { 'attr': {'class': 'form-select'} }) }}
            </div>
            <div class="mb-3">
                {{ form_widget(form.state, {'attr': {'id': 'article_state'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.excerpt) }}
                {{ form_widget(form.excerpt, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.tags) }}
                {{ form_widget(form.tags, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="btn-group mb-3" id="publish_button" role="group">
                <button type="submit" class="btn btn-primary">{{'Publish'|trans}}</button>
                <a href="{{ path('app_article') }}" class="btn btn-danger">{{'Cancel'|trans}}</a>
            </div>
            <div class="btn-group mb-3" id="draft_button" role="group">
                <button type="submit" class="btn btn-primary">{{'Save as draft'|trans}}</button>
                <a href="{{ path('app_article') }}" class="btn btn-danger">{{'Cancel'|trans}}</a>
            </div>
        </div>
    </div>
</div>